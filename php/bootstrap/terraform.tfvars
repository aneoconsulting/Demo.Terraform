# Private network name
network_name = "pv-net"

# Docker image repository for Nginx
nginx_repository = "nginx"

# Docker image tag for Nginx
nginx_tag = "latest"

# Nginx port
nginx_port = 8080

# Nginx config path
nginx_config_path = "conf/nginx.conf"

# Docker image repository for PHP
php_repository = "php"

# Docker image tag for PHP
php_tag = "fpm"

# path of the PHP app file
app_file = "app/index.php"
